{
  "name": "@energyweb/iam-domain-client",
  "version": "1.0.0",
  "description": "",
  "main": "dist/iam-domain-client.js",
  "module": "dist/iam-domain-client.esm.js",
  "types": "dist/src/iam-domain-client.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:typechain && pnpm run build:ts && copyfiles \"ethers/**/*.d.ts\" dist",
    "build:ts": "bili",
    "build:typechain": "pnpm run build:typechain:resolver && pnpm run build:typechain:registry",
    "build:typechain:resolver": "typechain --target ethers-v4 --outDir ethers './node_modules/@energyweb/iam-domain-contracts/artifacts/contracts/RoleDefinitionResolver.sol/RoleDefinitionResolver.json'",
    "build:typechain:registry": "typechain --target ethers-v4 --outDir ethers './node_modules/@energyweb/iam-domain-contracts/artifacts/@ensdomains/ens/contracts/ENSRegistry.sol/ENSRegistry.json'",
    "start-rpc": "run-with-testrpc -m \"candy maple cake sugar pudding cream honey rich smooth crumble sweet treat\" --port 8544 --accounts 20 --networkId=9 --gasLimit=10000000",
    "test:watch": "npm run start-rpc -- \"jest --coverage --watchAll\"",
    "test": "npm run start-rpc -- \"jest --coverage --no-cache\""
  },
  "keywords": [],
  "author": "Energy Web",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@energyweb/iam-domain-contracts": "~1.0.0",
    "ethers": "4.0.48",
    "tslib": "~2.1.0"
  },
  "devDependencies": {
    "@typechain/ethers-v4": "^4.0.0",
    "bili": "~5.0.5",
    "copyfiles": "~2.4.1",
    "rollup-plugin-typescript2": "~0.30.0",
    "typechain": "^4.0.3",
    "typescript": "^4.2.3",
    "jest": "~26.6.3",
    "@types/jest": "~26.0.21",
    "run-with-testrpc": "~0.3.1",
    "ts-jest": "~26.5.4"
  }
}